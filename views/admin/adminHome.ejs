<%- include('../layout/header') -%>

<style>
  .message {
            color: rgb(16, 21, 16);
        }

        .adminLogin {
            font-weight: bolder;
        }

        .box{
            background-color: #3d4b81;
        }

        .boxx{
            height: 450px;
            padding-top: 50px;
        }

        a{
            text-decoration: none;
        }

</style>

<section class="vh-100 gradient-custom">
    <div class="container-fluid h-100">
        <div class="row d-flex justify-content-center align-items-center h-100 box">
            <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                <div class="card bg-dark boxx text-white" style="border-radius: 1rem;">
                    <div class="card-body p-5 text-center">
                        <h3>Hello, <span class="name"><%= admin.name %></span> </h3>
                        <div class="mb-md-5 mt-md-5">
                            
                            <div>
                                <p class="text-center"><span class="email">Email:&emsp;&emsp;</span> <%= admin.email %></p>
                            </div>
                            <div>
                                <p class="text-center"><span class="mobile">Mobile Number:</span> <%= admin.mobile %></p>
                            </div>   
                            <br>                          
                            <button class="btn btn-outline-light btn-lg px-5"><a href="/admin/dashboard">Dashboard</a></button>
                            <button class="btn btn-outline-light btn-lg px-5"><a href="/admin/adminLogout">Logout</a></button>
                           
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>







