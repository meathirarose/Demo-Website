<%- include('../layout/header') -%>
<style>
    .message {
        color: rgb(194, 203, 194);
    }

    .adminLogin {
        font-weight: bolder;
    }

    .box{
        background-color: #3d4b81;
    }

    a{
        text-decoration: none;
    }

</style>


<section class="vh-100 gradient-custom">
    <div class="container-fluid h-100">
        <div class="row d-flex justify-content-center align-items-center h-100 box">
            <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                <div class="card bg-dark text-white" style="border-radius: 1rem;">
                    <div class="card-body p-5 text-center">

                        <div class="mb-md-2 mt-md-2">

                            <h2 class="fw-bold mb-2 text-uppercase adminLogin">Edit User</h2>
                            <br>
                            <form action="" method="post">

                                <div class="form-outline form-white mb-2">
                                    <input type="text" name="name" id="typeEmailX" class="form-control form-control-lg" />
                                    <label class="form-label" for="typeEmailX">Name</label>
                                </div>

                                <div class="form-outline form-white mb-2">
                                    <input type="email" name="email" id="typeEmailX" class="form-control form-control-lg" />
                                    <label class="form-label" for="typeEmailX">Email</label>
                                </div>

                                <div class="form-outline form-white mb-4">
                                    <input type="text" name="mobile" id="typePasswordX" class="form-control form-control-lg" />
                                    <label class="form-label" for="typePasswordX">Mobile</label>
                                </div>

                                <div >
                                    <input type="radio" name="is_varified"value="1" />
                                    <label class="form-label" for="typePasswordX">Verified&emsp;&emsp;&emsp;&emsp;&emsp;</label>
                                                             
                                    <input type="radio" name="is_varified"  value="0" />
                                    <label class="form-label" for="typePasswordX">Not Verified</label>
                               
                                </div>
                                <br>
                                <button class="btn btn-outline-light btn-lg px-5" type="submit">Update User</button>
                            </form>
                            <br>
                            <button class="btn btn-outline-light btn-lg px-5" type="submit"><a href="/admin">Go to Dashboard</a></button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>





<%- include('../layout/header') -%>